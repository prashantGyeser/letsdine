<div class="container">
  <div class="row-fluid">
    <div class="span12">
      
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @restaurant.name %>
</p>

<p>
  <b>Address:</b>
  <%= @restaurant.address %>
</p>

<p>
  <b>Cusine:</b>
  <%= @restaurant.cusine %>
</p>

<p>
  <b>Photo:</b>
  <%= @restaurant.photo %>
</p>

<h1>Restaurant Menu</h1>
<% for menu_item in @restaurant.menu_items %>
	<div>
		<%= menu_item.name %>
		<%= menu_item.course_name %>
	</div>
<% end %>


<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %>
