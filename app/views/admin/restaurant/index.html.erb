<div class="container">
  <div class="row-fluid">
    <div class="span12">
      <%= link_to "Create Restaurant", :new_admin_restaurant, :class => "btn btn-large btn-primary createEventButton" %>
    </div>
  </div>
</div>


<div class="container">
  <div class="row-fluid">
    <div class="span12">
      <h1>Listing restaurants</h1>

      <table>
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>Cusine</th>
          <th>Photo</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>

      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.name %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.cusine %></td>
          <td><%= restaurant.photo %></td>
          <td><%= link_to 'Show', restaurant %></td>
          <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
          <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </table>

      <br />

      <%= link_to 'New Restaurant', new_restaurant_path %>

    </div>
  </div>
</div>

