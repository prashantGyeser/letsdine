<div class="container">
	<div class="row-fluid">
		<div class="span12">
			<%= link_to "Create Event", :new_admin_event, :class => "btn btn-large btn-primary createEventButton" %>
		</div>
	</div>
</div>

<div class="container">
	<div class="row-fluid">
		<div class="span12">
			<% @event_list.each do |city,events| %>
			<h2><%= city %></h2>
				<table class="table table-striped">
					<tr>
						<th>Type</th>
						<th>Name</th>
						<th>Date</th>
						<th>Restaurant</th>
						<th>Seats Filled</th>
						<th>Max Seats</th>
						<th>Actions</th>
					</tr>
					<% events.each do |event| %>
						<% restaurant = Restaurant.find(event.restaurant_id) %>
					  	<tr>
					  		<td><%= event.event_type %></td>
					  		<td><%= event.event_name %></td>
					  		<td><%= event.event_date %></td>
					  		<td><%= restaurant.name %> </td>
					  		<% total_attendees = Attendee.where("event_id = ?", event.id).pluck(:seats).sum %>
					  		<td><%= total_attendees %> </td>
					  		<td><%= event.max_seats %> </td>
					  		<td><%= link_to "Edit", edit_admin_event_path(event) %></td>
					  	</tr>
				  	<% end %>
				</table>
				
			<% end %>
		</div>
	</div>
</div>
