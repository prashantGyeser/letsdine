<div class="container">
	<div class="row">
		<div class="col-md-12">
			<%= link_to "Create Event", :new_admin_event, :class => "btn btn-large btn-primary createEventButton" %>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<% @event_list.each do |city,events| %>
			<h2><%= city %></h2>
				<table class="table table-striped">
					<tr>
						<th>Type</th>
						<th>Name</th>
						<th>Event Date</th>
						<th>Restaurant</th>
						<th>Seats Filled</th>
						<th>Max Seats</th>
						<th>Actions</th>
					</tr>
					<% events.each do |event| %>
						<% restaurant = Restaurant.find(event.restaurant_id) %>
					  	<tr>
					  		<td><%= event.event_type %></td>
					  		<td><%= event.event_name %></td>
					  		<td><%= event.event_date %></td>
					  		<td><%= restaurant.name %> </td>
					  		<% total_attendees = Attendee.where("event_id = ?", event.id).pluck(:seats).sum %>
					  		<td><%= total_attendees %> </td>
					  		<td><%= event.max_seats %> </td>
					  		<td><%= link_to "Edit", edit_admin_event_path(event) %> | <a href="#attendeeModal<%= event.id%>" data-toggle="modal">View Attendees</a> </td>

					  		<!-- Modal -->
		                            <div id="attendeeModal<%= event.id%>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="<%= event.event_name%> Attendees" aria-hidden="true">
		                              <div class="modal-header">
		                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		                                <h3 id="myModalLabel"><%= event.event_name %> Attendees</h3>
		                              </div>
		                              <div class="modal-body">
		                                <% attendees = Attendee.where("event_id = ?", event.id) %>
		                                <ul>
		                                    <% attendees.each do |attedee| %>
		                                        <% user = User.find(attedee.user_id) %>
		                                        <li>
		                                            <%= user.name %> - Phone number: <%= attedee.phone_number %> - Seats: <%= attedee.seats %> 
		                                        </li>
		                                    <% end %>
		                                    
		                                </ul>
		                              </div>
		                              <div class="modal-footer">
		                                <button class="btn btn-large" data-dismiss="modal" aria-hidden="true">Close</button>
		                              </div>
		                            </div>
		                            <!-- End Modal -->
					  	</tr>
				  	<% end %>
				</table>
				
			<% end %>
		</div>
	</div>
</div>
