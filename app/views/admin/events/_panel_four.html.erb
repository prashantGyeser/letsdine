 <div class="container">
        <div class="row">
          <div class="col-md-12 newEventPage expandable-panel" id="cp-4">
            <div class="newEventSummary">
              <h4>
                <div class="initialHeader">
                  <span class="step">4</span>
                  <span class="text">Invite people attending</span>
                </div>
                <div class="successHeader">
                  <span><i class="icon-ok-sign finished"></i></span>
                  <span class="text">Inviting People Completed</span>
                  <a href="#" class="pull-right">Modify People Invited</a>
                </div>
              </h4>
            </div>
            <div class="expandable-panel-content">
              <div class="form-group">
                <label for="event_name">Event name</label>
                <p>
                  Enter the email address for all the people you want to invite. Seperate each email id by a comma. We will send them an invite
                </p>
                <%= f.text_area :invitees, :class => "form-control", :placeholder => "Enter the email ids of people you want to invite", :rows => "3" %>
                <!--
                <textarea class="form-control" placeholder="Enter the people you want to invite" rows="5"></textarea>
                -->
              </div>

              <%= f.submit :class => "btn btn-primary" %>

            </div>

          </div>
        </div>
      </div>