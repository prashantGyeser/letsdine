<% content_for :javascript do %>
    <%= javascript_include_tag "closed-event-overlay" %>
<% end %>

<div class="container">
    <div class="row-fluid">
        <div class="span12">
            <div class="zoomflow">
                <div class="items">
                    <% @header_events.each do |event| %>
                        <% restaurant = Restaurant.find(event.restaurant_id) %>
                        <% if event.event_image.blank? %>
                            <div class="item-tobe" data-source="<%= restaurant.photo_url.to_s %>">
                        <% else %>
                            <div class="item-tobe" data-source="<%= event.event_image_url.to_s %>">
                        <% end %>
                            <div class="captionCon">
                                <div style="left: 51%; top: 55px; width:260px;" data-delay="secs0-5" data-effect=" unblur-white unscale fade" class="caption style_bigtitle"> <%= event.event_name %>
                                </div>
                            </div>
                        </div>    
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
        <div class="container">
            <% eventCount = 0 %>
            <% @events.each do |event| %>
                <% restaurant = Restaurant.find(event.restaurant_id) %>
                <%# Checking if a new row has to be created %>
                <% if ( eventCount%4 ) == 0 %>
                    <div class="row-fluid">  

                <% end %>

                <div class="span3">
                    
                    <div class="event">                    
                        <% if event.event_image.blank? %>
                            <%= image_tag restaurant.photo_url.to_s %>
                        <% else %>
                            <%= image_tag event.event_image_url.to_s %>
                        <% end %>

                        <% if event.status == 'closed' %>
                            <div class="closed">
                                <h3>Closed</h3>
                            </div>    
                        <% end %>
                        
                        <h3><%= link_to event.event_name, event_path(event) %></h3>
                        <div class="eventDetails">
                            <div class="detail">
                                <img src="/assets/locationIcon.png">
                                <%= restaurant.name %>
                            </div>
                            <div class="detail">
                                <img src="/assets/timeIcon.png">
                                <%= event.event_date.strftime("%d %B %Y") %>
                                <%= event.event_time.strftime("%I:%M%p") %>
                            </div>
                        </div>
                        <p>
                            <%= truncate(event.event_description, :length => 100) %> <%= link_to "See event", event_path(event) %>
                        </p>
                        <div class="peopleAttending">
                            <% event.attendee.first(4).each do |personAttending| %>
                                <% user =  User.find(personAttending.user_id) %>
                                <% if user.image.blank? %>
                                    <%= image_tag "/assets/noProfilePic.png", "data-toggle" => "tooltip", :title => user.name, :class => "profilePic" %>    
                                <% else %>
                                    <%= image_tag user.image.to_s, "data-toggle" => "tooltip", :title => user.name, :class => "profilePic" %>    
                                <% end %>
                              <% end %>
                              <p>
                                <%= link_to "See All People Attending", event_path(event) %>
                            </p>
                        </div>
                    </div>
                </div>    

                <% if ( eventCount%3 ) == 0 && eventCount != 0%>
                    </div>        
                    <% eventCount = 0 %>
                <% else %>
                    <% eventCount = eventCount + 1 %>
                <% end %>                
                <%# Closing tag for the new row div %>
                
            <% end %>
        </div>
    </div>   

            
<script>
    jQuery(document).ready(function($){
        jQuery(".zoomflow").zoomflow({
            settings_slideshowTime:5
            ,design_padding:150
        });
    });
</script>

