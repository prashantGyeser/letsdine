<%= form_for(@event, :html => {:multipart => true}) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :event_name %>
    <%= f.text_field :event_name %>
  </div>
  <div class="field">
    <%= f.label :event_description %>
    <%= f.text_area :event_description %>
  </div>
  <div class="field">
    <%= f.label :event_date %>
    <%= f.date_select :event_date %>
  </div>
  <div class="field">
    <%= f.label :event_time %>
    <%= f.time_select :event_time %>
  </div>
  <div class="field">
    <%= f.label :restaurant_id %>
    <%= f.select :restaurant_id, Restaurant.all.collect {|x| [x.name, x.id]}, {}%>   
     
  </div>
  <div class="field">
    <%= f.label :event_image %>
    <%= f.file_field :event_image %>  
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
