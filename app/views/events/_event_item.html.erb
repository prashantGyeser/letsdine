<%restaurant = Restaurant.find(event.restaurant_id)%>
<div class="col-md-4">
	<div class="eventListingItem">
		<div class="imageWithOverlay">
			<% if event.event_image.blank? %>
				<%= image_tag restaurant.photo_url(:event_page_image).to_s, :class=> "img-responsive" %>
			<% else %>
				<%= image_tag event.event_image_url(:event_page_image).to_s, :class=> "img-responsive" %>
			<% end %>
			
			<div class="eventDate">

				<span><%= event.event_date.strftime("%A, %d %B %Y") %> <%= event.event_time.strftime("%I:%M%p") %> </span>
			</div>
			<div class="seatsLeft">
				<%= event.seats_left %> Seats Left
			</div>
		</div>

		<div class="eventListingContent">
			<h4><%= link_to event.event_name, event_path(event) %></h4>
			<span>
				<i class="icon-map-marker"></i>
				<%= restaurant.name %>
			</span>   
			<%# event_description_html =  BlueCloth.new(event.event_description).to_html %>      
			<%# simple_format(@event.event_description) %>      

			<%# 
			Use if the markdown has to be shown and converted a proper text and shown 
			description_to_show = sanitize(truncate(RedCloth.new(event.event_description).to_html, length: 100)) 
			%>
			<%# description_to_show = sanitize(truncate(event.event_description, length: 100)) %>
			<% html = sanitize(BlueCloth.new(event.event_description).to_html)  %>
			<% description_to_show = truncate(Sanitize.clean(html), :length => 100) %>
			<%# description_to_show = sanitize(truncate(event.event_description, length: 100)) %>
			<%# truncate(description_to_show, :length => 100) %>
			<%= description_to_show %> <%= link_to "See event", event_path(event) %>
		</div>
	</div>
</div>