<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<div class="checkoutContainer">
				
				<div class="checkoutHeader">
					<h3>Status </h3>
				</div>

				<div class="checkoutContents">

					<% if @status.to_i == 0 %>
						<div class="alert alert-danger"><strong>Failed!</strong> Did you select your bank on the ipay88 page? Please try again later</div>						
					<% elsif @status.to_i == 1%>
						<div class="alert alert-danger"><strong>Failed!</strong> Some thing failed on your bank page. Please try again later</div>						
					<% elsif @status.to_i == 2%>
						<div class="alert alert-success"><strong>Payment made successfully!</strong> Now all you have to do is attend the event.</div>
					<% else %>
						<div class="alert alert-danger"><strong>Failed!</strong> Some thing happened. Please try again later</div>						
					<% end %>

					<div class="paymentStatus">
						<%= @payment_notification.status %>
						<h4>Return dump below</h4>
						<%= @payment_notification.params %>
					</div>
				</div>


			</div>
			
			
		</div>
	</div>
</div>
